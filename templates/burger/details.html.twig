{% extends 'base.html.twig' %}
{% block title %}
	Details of
	{{ burger.getName() }}
	-
	{{ parent() }}
{% endblock %}

{% block body%}
	{% if burger == null %}

		<h1>
			Le burger n'existe pas, pas de détails.
		</h1>

	{% else %}
		<h1>
			Bienvenue sur les détails du burger
			{{ burger.getId() }}, le
			{{ burger.getName() }}
			!</h1>

		{% if burger.getImage() %}
			<img class="card-img-top" src="{{ asset('images/' ~ burger.getImage().getName()) }}" alt="Card image cap" style="max-height: 40%; max-width: 60%;">
			<br>
		{% endif %}

		Voici sa ses ingrédients :
		<ul>
			<li>Pain :
				{{ burger.getPain().getName() }}</li>
			<li>Oignon :
				{{ burger.getOignon().getName() }}</li>
			<li>Sauces :
				{% for sauce in burger.getSauces() %}
					{{sauce.getName()}},
				{% endfor %}
			</li>
		</ul>


		Voici ses commentaires :
		<ul>
			{% for commentaire in burger.getCommentaires() %}
				<li>{{ commentaire.getContent() }}</li>
			{% else %}
				<li>No comments available.</li>
			{% endfor %}
		</ul>


	{% endif %}

{% endblock %}
